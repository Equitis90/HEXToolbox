// "bootstrap-sprockets" must be imported before "bootstrap" and "bootstrap/variables"
@import "bootstrap-sprockets";
@import "bootstrap";
@import "bootstrap-multiselect";

html body {
  background: url( <%= asset_path 'background.jpg' %> ) no-repeat fixed center;
  background-size: 100%;
}

.navbar-default {
  background: radial-gradient( lightblue, lightgrey );
}

.nav.navbar-nav li a {
  font-family: "Lucida Grande";
  font-weight: bold;
  color: black;
}

label {
  color: black;
  white-space: nowrap;
}

.wrappable {
  white-space:normal;
}

.card_popover {
  max-width: 100%;
  height: 510px;
}

.item {
  float: left;
  margin: 0 1.5%;
  width: 22%;
}

.item img {
  max-width: 100%;
  width: auto;
  height: auto;
  background: url( <%= asset_path 'DefaultSleeve.png' %> ) no-repeat;
  background-size: contain;
}

.infinite-table{
  margin: auto;
}

.item div {
  height: 40px;
  font-family: "Lucida Grande";
  font-size: 90%;
  color: black;
  font-weight: bold;
  text-align: center;
}

.well.right {
  width: 75%;
  float: right;
  margin: 0 10px 10px 10px;
  background-color: rgba( lightgrey, 0.85 );
}

.form-group > * {
  margin: 5px 5px 5px 0;
}

.multiselect-container {
  width: 100% !important;
}

#modal-window {
  margin: 10px auto;
  width: 70%;
  background-color: ghostwhite;
  border-radius: 20px;
}

#modal-window > .modal-body > img {
  max-width: 40%;
  width: auto;
  height: auto;
  float: left;
  padding: 10px;
}

#modal-window > .modal-body > #card_info {
  width: 60%;
  float: left;
  padding: 10px;
}

#modal-window > .modal-header > button {
  padding-top: 10px;
}

#card_info > img {
  float: left;
  margin: 0 10px 10px 0;
}

#top-link-block.affix-top {
  position: absolute;
  bottom: -82px;
  left: 10px;
}

#top-link-block.affix {
  position: fixed;
  bottom: 18px;
  left: 10px;
}

.social {
  float: left;
  width: 23%;
}

.svg {
  width: 100%;
}

.equipment > td > img {
  float: left;
  margin: 0 10px 10px 0;
}

.oneandone {
  margin: 0 0 0 10px
