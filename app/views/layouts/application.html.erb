<!DOCTYPE html>
<html>
<head>
  <title>HEXToolbox</title>
  <%= favicon_link_tag 'logo.jpg' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <ul class="nav navbar-nav" data-turbolinks="false">
      <li><%= link_to 'Cards', { controller: 'index', action: 'show' } %></li>
      <li><%= link_to 'Equipment', { controller: 'equipment', action: 'list' } %></li>
    </ul>
  </div>
</nav>
<body>

<div class="modal fade" id="modal-window" >
</div>
  <div class="social">
    <a class="twitter-timeline" data-width="100%" data-height="500" href="https://twitter.com/HexTCG">
    Tweets by @HexTCG</a>
    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>

    <iframe
      src="https://player.twitch.tv/?channel=HexTCG"
      frameborder="0"
      scrolling="yes"
      height="300"
      width="100%"
      allowfullscreen="true">
    </iframe>
    <br/>
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-91585122-1', 'site.hextcgtools.com');
        ga('send', 'pageview');

    </script>
  </div>
  <%= yield %>
<span id="top-link-block" class="hidden">
    <a href="#top" class="well well-sm" onclick="$('html,body').animate( { scrollTop:0 },'slow' );return false;">
        <i class="glyphicon glyphicon-chevron-up"></i> Back to Top
    </a>
</span>
</body>
</html>
